<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppTheme" parent="@style/Theme.AppCompat.Light">
        <item name="android:actionBarTabBarStyle">@style/CustomTabBar</item>
        <item name="actionBarTabBarStyle">@style/CustomTabBar</item>

        <item name="android:actionBarTabStyle">@style/CustomTabView</item>
        <item name="actionBarTabStyle">@style/CustomTabView</item>

        <item name="android:actionBarTabTextStyle">@style/CustomTabText</item>
        <item name="actionBarTabTextStyle">@style/CustomTabText</item>

        <item name="android:actionBarStyle">@style/CustomActionBar</item>
        <item name="actionBarStyle">@style/CustomActionBar</item>

        <!-- to remove the default shadow beneath the action bar -->
        <item name="android:windowContentOverlay">@null</item>

        <!-- for the preview window -->
        <item name="android:windowBackground">@android:color/white</item>
    </style>

    <style name="icon">
        <item name="android:minHeight">32dp</item>
        <item name="android:minWidth">32dp</item>
        <item name="android:background">@drawable/icon_imagebutton</item>
    </style>

    <style name="CustomActionBar"  parent="@style/Widget.AppCompat.ActionBar">
        <item name="android:background">@color/main_color</item>
        <item name="background">@color/main_color</item>

        <item name="android:titleTextStyle">@style/ActionBarTitle</item>
        <item name="titleTextStyle">@style/ActionBarTitle</item>

        <item name="android:displayOptions">showTitle</item>
        <item name="displayOptions">showTitle</item>
        <item name="android:icon">@android:color/transparent</item>
    </style>

    <style name="CustomTabView"  parent="@style/Widget.AppCompat.ActionBar.TabView">
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:layout_marginRight">0dp</item>
        <item name="android:background">@drawable/action_bar_tab_indicator</item>
        <item name="android:showDividers">none</item>
        <item name="android:measureWithLargestChild">true</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="CustomTabText" parent="@style/Widget.AppCompat.ActionBar.TabText" >
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/tabs_text</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="CustomTabBar" parent="@style/Widget.AppCompat.ActionBar.TabBar">
        <item name="android:showDividers">middle</item>
        <item name="android:divider">@android:color/transparent</item>
        <item name="android:dividerPadding">0dp</item>
    </style>

    <style name="PlayFragmentSongTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:fadingEdge">horizontal</item>
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
        <item name="android:singleLine">true</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:textColor">@color/play_controls_title</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="PlayFragmentSongDetails">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/play_controls_artist_album</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="ActionBarTitle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/app_title_text</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="SeekBarTimeText" parent="android:TextAppearance.Medium">
        <item name="android:textColor">@color/main_color</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
