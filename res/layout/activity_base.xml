<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.arcusapp.soundbox.util.SlidingUpPanelLayout
        xmlns:sothree="http://schemas.android.com/apk/res-auto"
        android:id="@+id/sliding_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        sothree:shadowHeight="4dp"
        sothree:paralaxOffset="100dp"
        sothree:dragView="@+id/dragView">

        <!-- MAIN CONTENT -->
        <FrameLayout
            android:id="@+id/contentFragmentContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="?android:attr/actionBarSize" />

        <!-- SLIDING LAYOUT -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:focusable="false"
            android:orientation="vertical">

            <!-- Play controls -->

            <fragment
                android:id="@+id/playFragmentContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                class="com.arcusapp.soundbox.fragment.PlayFragment" />

            <!-- Current playlist -->
            <fragment
                android:id="@+id/currentPlaylistFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                class="com.arcusapp.soundbox.fragment.MediaListFragment" />

        </LinearLayout>

    </com.arcusapp.soundbox.util.SlidingUpPanelLayout>

</LinearLayout>