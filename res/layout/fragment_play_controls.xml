<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:clickable="true"
    android:focusable="false">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="@drawable/above_shadow" />

    <SeekBar
        android:id="@+id/progressBar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/progress_bar_height_expanded"
        android:progressDrawable="@drawable/progress_bar_states"
        android:indeterminateOnly="false"
        android:paddingLeft="-5dp"
        android:paddingRight="-5dp"
        android:thumbOffset="0px"
        android:max="100" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/play_controls_background">

        <TextView
            android:id="@+id/txtTimeCurrent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_alignParentLeft="true"
            style="@style/SeekBarTimeText"/>

        <TextView
            android:id="@+id/txtTimeTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_alignParentRight="true"
            style="@style/SeekBarTimeText" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="7dp"
        android:background="@color/play_controls_background">

        <ImageButton
            android:id="@+id/btnSwitchRandom"
            style="@style/icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_random_off"/>

        <ImageButton
            android:id="@+id/btnPlayPause"
            style="@style/icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_play" />

        <ImageButton
            android:id="@+id/btnSwitchRepeat"
            style="@style/icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:src="@drawable/ic_repeat_off"/>

        <ImageButton
            android:id="@+id/btnNextSong"
            style="@style/icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/btnPlayPause"
            android:layout_toLeftOf="@id/btnSwitchRandom"
            android:src="@drawable/ic_next" />

        <ImageButton
            android:id="@+id/btnPrevSong"
            style="@style/icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/btnSwitchRepeat"
            android:layout_toLeftOf="@id/btnPlayPause"
            android:src="@drawable/ic_previous" />

    </RelativeLayout>

</LinearLayout>