<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:clickable="true"
    android:focusable="false"
    android:background="@color/play_controls_background">

    <LinearLayout
        android:id="@+id/slidingPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <ImageButton
                android:id="@+id/btnPanel"
                style="@style/icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_play" />

            <LinearLayout
                android:id="@+id/draggerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/btnPanel"
                android:layout_centerVertical="true"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtSongTitle"
                    style="@style/PlayFragmentSongTitle">
                </TextView>

            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/txtSongArtistAlbum"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        style="@style/PlayFragmentSongDetails" />

    <SeekBar
        android:id="@+id/progressBar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/progress_bar_height_expanded"
        android:progressDrawable="@drawable/progress_bar_states"
        android:layout_marginTop="3dp"
        android:indeterminateOnly="false"
        android:thumbOffset="0px"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:max="100" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp">

        <TextView
            android:id="@+id/txtTimeCurrent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_alignParentLeft="true"
            android:textColor="@color/seek_bar_text"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txtTimeTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_alignParentRight="true"
            android:textColor="@color/seek_bar_text"
            android:textSize="16sp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp">

        <ImageButton
            android:id="@+id/btnSwitchRandom"
            style="@style/icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_random_off"/>

        <ImageButton
            android:id="@+id/btnPlayPause"
            style="@style/icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_play" />

        <ImageButton
            android:id="@+id/btnSwitchRepeat"
            style="@style/icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:src="@drawable/ic_repeat_off"/>

        <ImageButton
            android:id="@+id/btnNextSong"
            style="@style/icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/btnPlayPause"
            android:layout_toLeftOf="@id/btnSwitchRandom"
            android:src="@drawable/ic_next" />

        <ImageButton
            android:id="@+id/btnPrevSong"
            style="@style/icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/btnSwitchRepeat"
            android:layout_toLeftOf="@id/btnPlayPause"
            android:src="@drawable/ic_previous" />

    </RelativeLayout>

</LinearLayout>