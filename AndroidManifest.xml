<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.arcusapp.soundbox"
    android:installLocation="preferExternal"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="12"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        
        <service
		  android:name="com.arcusapp.soundbox.player.MediaPlayerService"
		  android:icon="@drawable/ic_launcher"
		  android:label="@string/app_name">
		</service> 
		
        <activity
            android:name="com.arcusapp.soundbox.activity.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.arcusapp.soundbox.activity.FoldersActivity"
            android:label="@string/title_activity_folders" >
            <intent-filter>
                <action android:name="com.arcusapp.soundbox.FOLDERS_ACTIVITY" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.arcusapp.soundbox.activity.ArtistsActivity"
            android:label="@string/title_activity_artists" >
            <intent-filter>
                <action android:name="com.arcusapp.soundbox.ARTISTS_ACTIVITY" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.arcusapp.soundbox.activity.PlayActivity"
            android:label="@string/title_activity_play" >
            <intent-filter>
                <action android:name="com.arcusapp.soundbox.PLAY_ACTIVITY" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
        	android:name="com.arcusapp.soundbox.activity.SongListActivity"
            android:label="@string/title_activity_songs_list" >
            <intent-filter>
                <action android:name="com.arcusapp.soundbox.SONGSLIST_ACTIVITY" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.arcusapp.soundbox.activity.PlayListsActivityname"
            android:label="@string/title_activity_play_lists" >
            <intent-filter>
                <action android:name="com.arcusapp.soundbox.PLAYLISTS_ACTIVITY" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>